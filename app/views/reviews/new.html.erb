<% if params[:chocolate_id] %>
    <h1>Add a Review for <%= @review.chocolate.category %> - <%= @review.chocolate.brand.name %></h1>
<% else %>
    <h1>Create a review</h1>
<% end %>

<%= form_for(@review) do |f|%>
<br>
 <div>
    <%= f.label :stars %>
    <%= f.number_field :stars, min:1, max:5 %>
  </div>
  <br>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <br>
  <div>
    <%= f.label :content %>
    <%= f.text_area :content, size: "25x10" %>
  </div>
    <%= f.hidden_field :chocolate_id %>
    <br>
    <%= f.submit %>
 

<% end %>
