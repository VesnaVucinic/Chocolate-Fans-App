<h1>Sign Up!</h1>

<%= render partial: 'layouts/errors', locals: {object: @user} %>

<%= form_for @user, controller: 'users', action: 'create'  do |f|%> <!--we use form_for becouse we are creating new user, in controller User.new-->
 <div class="form-group">
    <%= f.label :username, "Username:"%> 
    <%= f.text_field :username %>
  
    <%= f.label :email, "Email:" %>
    <%= f.email_field :email %>

    <%= f.label :password, "Password:" %>
    <%= f.password_field :password %>
</div>
  <div class="form-group">
    <label>
      <input type="checkbox"> Remember me
    </label>  
  </div>

<div class="field">
 
    <%= f.submit "Sign Up", class: "btn btn-default btn-primary" %>

</div>
<% end %>

